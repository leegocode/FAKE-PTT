<section class="post">
<ul class="header">
  <li>
    <div>
      <span>作者</span>
      <span><%= @post.display_username %></span>
    </div>
    <div>
      <span>看板</span>
      <span><%= @post.board.title %></span>
    </div>
  </li>
  <li>
    <span>標題</span>
    <span><%= @post.title %></span>
  </li>
  <li>
    <span>時間</span>
    <span><%= @post.created_at %></span>
  </li>
</ul>
<hr>

<p><%= @post.content %></p>
</section>

<%= link_to "back to board", board_path(@post.board) %>
