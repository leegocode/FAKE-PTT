<section class="post">


  <ul class="header">
    <li>
      <div>
        <span>作者</span>
        <span><%= @post.display_username %></span>
      </div>
      <div>
        <span>看板</span>
        <span><%= @post.board.title %></span>
      </div>
    </li>
    <li>
      <span>標題</span>
      <span><%= @post.title %></span>
    </li>
    <li>
      <span>時間</span>
      <span><%= @post.created_at %></span>
    </li>
  </ul>
  <hr>


  <p><%= @post.content %></p>
  <%= image_tag @post.photo.variant(resize_to_limit: [300, 300]) if @post.photo.attached? %>
    <hr>
    <ul>
      <% @comments.each do |comment| %>
      <li><%= comment.content %></li>
      <% end %>
    </ul>

    <div class="field">
      <h2>leave comments!</h2>
      <%= form_with(model: @comment, url: post_comments_path(@post)) do |form| %>
      <%= form.text_field :content %>
      <%= form.submit "送出" %>
      <% end %>

      <%= link_to "back to board", board_path(@post.board) %>
    </div>



</section>
