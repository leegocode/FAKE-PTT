<h1>sign up</h1>

<%= form_for( @user ) do |form| %>
  <div class="field">
    <%= form.label :account, "帳號" %>
    <%= form.text_field :account %>
  </div>

  <div class="field">
    <%= form.label :password, "密碼" %>
    <%= form.password_field :password %>
  </div>

  <div class="field">
    <%= form.label :email, "信箱" %>
    <%= form.eamil_field :email %>
  </div>

  <%= form.submit "註冊帳號" %>

<% end %>
